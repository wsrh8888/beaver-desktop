{
  "name": "beaver",
  "type": "module",
  "version": "1.1.0",
  "private": true,
  "description": "beaverIM",
  "author": "Robert",
  "license": "MIT",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "chcp 65001 && vite",
    "build-renderer": "vue-tsc --noEmit && vite build",
    "build-electron": "electron-builder build --publish never --dir",
    "package": "npm run build-renderer && npm run build-electron",
    "package-install": "build\\installer\\index.bat",
    "lint": "eslint . --fix",
    "prepare": "husky",
    "postinstall": "npx electron-rebuild"
  },
  "copyright": "Copyright ? 2025 Beaver. All Rights Reserved.",
  "build": {
    "files": [
      "dist-electron/**/*",
      "resource/**/*",
      "dist/**/*"
    ],
    "asar": true,
    "extends": null,
    "appId": "com.beaver",
    "productName": "beaver",
    "artifactName": "beaver-${version}.${ext}",
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "resource/app.ico"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "beaver",
      "differentialPackage": true,
      "unicode": true,
      "warningsAsErrors": false,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    },
    "publish": [
      {
        "provider": "github",
        "owner": "your-github-username",
        "repo": "your-repo-name"
      }
    ]
  },
  "dependencies": {
    "@rollup/plugin-commonjs": "^28.0.1",
    "@rollup/plugin-node-resolve": "^15.3.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "better-sqlite3": "^12.4.1",
    "browser-md5-file": "^1.1.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.5",
    "electron-screenshots": "^0.5.26",
    "electron-store": "^10.1.0",
    "electron-updater": "^6.3.9",
    "extract-zip": "^2.0.1",
    "node-machine-id": "^1.1.12",
    "sql.js": "^1.13.0",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.16.1",
    "@types/crypto-js": "^4.2.2",
    "@types/ini": "^4.1.1",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.14.11",
    "@types/postcss-pxtorem": "^6.1.0",
    "@types/unzipper": "^0.10.9",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vitejs/plugin-vue-jsx": "^4.0.0",
    "@vue/compiler-sfc": "^3.4.33",
    "axios": "^1.7.2",
    "compare-versions": "^6.1.1",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.5",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "electron-devtools-installer": "^3.2.0",
    "fs-extra": "^11.3.0",
    "husky": "^9.1.7",
    "ini": "^4.1.3",
    "less": "^4.2.0",
    "lint-staged": "^16.1.6",
    "lodash-es": "^4.17.21",
    "log4js": "^6.9.1",
    "moment": "^2.30.1",
    "pinia": "^2.1.7",
    "postcss-pxtorem": "^6.1.0",
    "shelljs": "^0.8.5",
    "simple-git": "^3.27.0",
    "systeminformation": "^5.23.4",
    "typescript": "^5.2.2",
    "unzipper": "^0.12.3",
    "vite": "^5.3.4",
    "vite-plugin-compression": "^0.5.1",
    "vite-plugin-electron": "^0.28.7",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-static-copy": "^1.0.6",
    "vite-plugin-svg-icons": "^2.0.1",
    "vite-svg-loader": "^5.1.0",
    "vue": "^3.4.33",
    "vue-router": "4.2",
    "vue-tsc": "^2.0.24"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint --fix"
    ]
  }
}
